@model LoginModel
@{
    Layout = "_layoutDeslogado";
    ViewData["Tittle"] = "Login";
}

@if (TempData["MensagemErro"] != null)
{
    <div class="alert alert-danger" role="alert">
        <button type="button" class="btn btn-danger btn-sm close-alert" data-bs-dismiss="alert" aria-label="Close">X</button>
        @TempData["MensagemErro"]
    </div>
}

<style>
    body, html{
        margin: 0;
        padding: 0;
        overflow-x: hidden;
    }

    .bg-image-vertical {
        position: relative;
        overflow: hidden;
        background-repeat: no-repeat;
        background-position: right center;
        background-size: auto 100%;
    }
</style>

        <div class="row">
            <div class="col-sm-6 px-0 d-none d-sm-block">
                    <img src="https://images.autosport.pt/2020/01/leiloes-online-tirar-vantagem-do-mercado-scaled.jpg"
                     alt="Login image" class="w-100 vh-100" style="object-fit: cover; object-position: left;">
            </div>
            <div class="col-sm-5 text-black">

                <img src="~/Media/BragaLeiloes.png" class="px-6 ms-xl-5" style="width: 20%;" />

                <div class="d-flex align-items-center h-custom-2 px-5 ms-xl-4 mt-2 pt-5 pt-xl-0 mt-xl-n5">

                    <form asp-controller="Login" asp-action="Entrar" method="post" style="width: 30rem;">

                        <div class="mb-5 mt-5">
                            <h2 class="mb-2 pb-3" style="letter-spacing: 1px; font-weight:bold;">Log In</h2>
                            <h6 class="fw-bold" style="color: #9FA5AB;font-size: 10px;font-family: Verdana, Geneva, Tahoma, sans-serif">Insira o seu email e password para aceder à plataforma.</h6>
                        </div>

                        <div class="form-outline mb-4">
                            <label class="form-label fw-bold" for="login">Email</label>
                            <input type="text" asp-for="Login" id="login" class="border border-dark form-control form-control-lg" placeholder="Insira o seu Email" />
                            @Html.ValidationMessageFor(x => x.Login)
                        </div>

                        <div class="form-outline mb-4">
                            <label class="form-label fw-bold" for="senha">Password</label>
                            <input type="password" asp-for="Senha" id="senha" class="border border-dark form-control form-control-lg" placeholder="Insira a sua Password" />
                            @Html.ValidationMessageFor(x => x.Senha)
                        </div>

                        <div class="pt-1" style="margin-bottom:30px;margin-top:30px;">
                            <button class="btn btn-dark btn-block w-100" type="submit">Entrar</button>
                        </div>

                    <p class="fw-bold" style="color: #62676B;font-size: 10px; letter-spacing: 0.9px;">Não possui uma conta? <a href="#!" class="link-info">Sign Up</a></p>

                    </form>

                </div>

            </div>
        </div>