    * {
      border: 0;
      box-sizing: border-box;
      margin: 0;
      padding: 0;
    }

    body {
      background: rgb(250, 250, 250) url(http://lorempixel.com/1920/1080/nature/);
      font-family: Lato, Helvetica, Arial, sans-serif;
