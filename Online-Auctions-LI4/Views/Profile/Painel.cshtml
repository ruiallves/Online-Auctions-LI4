            }

        /* Sidenav */
        .sidenav-semProdutos {
            background-color: #efefef;
            color: #333;
            border-bottom-right-radius: 25px;
            height: 86%;
            overflow-x: hidden;
            width: 300px;
            display: flex;
            justify-content: center;
            align-items: center;
            flex-direction: column;
            display: flex;
            margin-left: -200px;
            margin-top: -16px;
            margin-bottom: -90px;
        }

        .sidenav {
            background-color: #efefef;
            color: #333;
            border-bottom-right-radius: 25px;
            height: 86%;
            overflow-x: hidden;
            width: 300px;
            display: flex;
            justify-content: center;
            align-items: center;
            flex-direction: column;
            display: flex;
            margin-left: -200px;
            margin-top: -16px;
            margin-bottom: -90px;
        }

        .profile {
