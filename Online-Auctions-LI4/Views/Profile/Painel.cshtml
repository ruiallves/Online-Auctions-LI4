@model Dictionary<UserModel, List<Dictionary<UserModel, Dictionary<int, Dictionary<int, int>>>>>
@{
    Layout = "_Layout";
    ViewData["Tittle"] = "Perfil";
}

<head>
    <title>Profile</title>
    <style>
        * {
            box-sizing: border-box;
            margin: 0;
            padding: 0;
        }

        body {
            line-height: 1.5;
            font-family: 'Poppins', sans-serif;
        }


        h2,
        h3,
        a {
