                                        {
                                            <div class="produto-preco-base" style="font-size: 14px; margin-top: 5px;">
                                                @if (@leilao.Quantia == @produto.PrecoBase)
                                                {
                                                    <p style="font-weight: bold;">Lance Vencedor: ----</p>
                                                }
                                                else
                                                {
                                                    <h6 style="font-weight: bold;">Lance Vencedor: @leilao.Quantia €</h6>
                                                }
                                            </div>

