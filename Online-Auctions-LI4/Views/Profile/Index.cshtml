@model UserModel
@{
    Layout = "_Layout";
    ViewData["Tittle"] = "Perfil";
}

<head>
    <title>Profile</title>
    <style>
        * {
            box-sizing: border-box;
            margin: 0;
            padding: 0;
        }

        body {
            line-height: 1.5;
            font-family: 'Poppins', sans-serif;
        }


        h2,
        h3,
        a {
            color: #34495e;
        }

        a {
            text-decoration: none;
        }

        .main-nav a {
            padding: 10px 15px;
            text-transform: uppercase;
            text-align: center;
            display: block;
        }

        .main-nav a {
            color: #34495e;
            font-size: .99em;
        }

            .main-nav a:hover {
                color: #718daa;
            }

        /* Sidenav */
        .sidenav {
            background-color: #efefef;
            color: #333;
            border-bottom-right-radius: 25px;
            height: 86%;
            overflow-x: hidden;
            width: 300px;
            display: flex;
            justify-content: center;
            align-items: center;
            flex-direction: column;
            display: flex;
            margin-left: -200px;
            margin-top: -16px;
            margin-bottom: -90px;
        }

        .profile {
            margin-bottom: 20px;
            margin-top: -12px;
        }

            .profile img {
                box-shadow: 0px 0px 5px 1px grey;
                margin-top: 40px;
            }

        .name {
            font-size: 22px;
            font-weight: bold;
            padding-top: 20px;
        }

        .job {
            font-size: 13px;
            font-weight: bold;
            padding-top: 2px;
            color: #818181;
        }

        .loc {
            font-size: 15px;
            font-weight: bold;
            padding-top: 15px;
        }

        .url, hr {
            text-align: center;
        }

            .url hr {
                width: 100%;
            }

            .url a {
                color: #818181;
                display: block;
                font-size: 20px;
                margin: 10px 0;
                padding: 6px 8px;
                text-decoration: none;
                text-transform: uppercase;
            }

                .url a:hover, .url .active {
                    color: #454444;
                }

        /* End */

        /* Main */

        .main {
            padding-left: 150px;
        }

            .main h2 {
                color: #333;
                font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
                font-size: 32px;
                margin-bottom: 10px;
            }

            .main .card {
                background-color: #efefef;
                border-radius: 18px;
                box-shadow: 1px 1px 8px 0 grey;
                height: auto;
                margin-bottom: 30px;
                padding: 50px 0 50px 50px;
            }

                .main .card table {
                    border: none;
                    font-size: 16px;
                    height: 270px;
                    width: 80%;
                }

        .edit {
            position: absolute;
            color: #fff;
            right: 14%;
        }

        .container-section {
            display: flex;
        }

    </style>
</head>


<body>
    <section class="container-section">

        <!-- Sidenav -->
        <div class="sidenav">
            <div class="profile" style="text-align: center;align-items: center;">
                <img src="~/Captura de ecrã 2023-11-26 232802.png" alt="" width="180" height="180">

                <div class="name">
                    @Model.Name
                </div>
                <div class="job">
                    @Model.Username
                </div>
                <div class="loc">
                    @Model.morada
                </div>
            </div>

            <div class="sidenav-url">
                <div class="url" style="margin-top: 90px;">
                    <hr align="center">
                    <a href="#profile">Editar Perfil</a>
                    <hr align="center">
                </div>
                <div class="url">
                    <a href="#settings">Produtos</a>
                    <hr align="center">
                </div>
                <div class="url">
                    <a href="#settings">Log Out</a>
                    <hr align="center">
                </div>
            </div>
        </div>


        <!-- End -->
        <!-- Main -->
        <div class="main">
            <div class="filter">
            </div>
            <h2 style="margin-bottom: 50px;">Histórico De Leilões</h2>
        </div>
</body>
