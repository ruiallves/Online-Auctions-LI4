            <h2 style="margin-bottom: 50px;">Histórico De Leilões</h2>
            @if (Model != null)
            {
                @foreach (var pair in Model)
                {
                    if (pair.Value.Any() && pair.Value.First().Value.Any())
                    {
                        var produto = pair.Value.First().Value.First().Key;
                        var leilao = pair.Value.First().Key;
                        var userVencedor = pair.Value.First().Value.First().Value;

                        if (leilao.Status == Online_Auctions_LI4.enums.LeilaoEnum.Iniciado)
                        {
                            <div class="produto-display">
                                <div class="produto-image">
                                    @if (!string.IsNullOrEmpty(produto.Imagem))
                                    {
