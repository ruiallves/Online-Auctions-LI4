@model UserModel
@{
    Layout = "_Layout";
    ViewData["Tittle"] = "Perfil";
}

<head>
    <title>Profile</title>
    <style>
        * {
            box-sizing: border-box;
            margin: 0;
            padding: 0;
        }

        body {
            line-height: 1.5;
            font-family: 'Poppins', sans-serif;
        }


        h2,
        h3,
        a {
            color: #34495e;
        }

        a {
            text-decoration: none;
        }

        .main-nav a {
            padding: 10px 15px;
            text-transform: uppercase;
            text-align: center;
            display: block;
        }

        .main-nav a {
            color: #34495e;
            font-size: .99em;
        }

            .main-nav a:hover {
                color: #718daa;
            }

        /* Sidenav */
        .sidenav-semProdutos {
            background-color: #efefef;
            color: #333;
            border-bottom-right-radius: 25px;
            height: 86%;
            overflow-x: hidden;
            width: 300px;
            display: flex;
            justify-content: center;
            align-items: center;
            flex-direction: column;
            display: flex;
            margin-left: -200px;
            margin-top: -16px;
            margin-bottom: -90px;
        }

        .sidenav {
            background-color: #efefef;
            color: #333;
            border-bottom-right-radius: 25px;
            height: 86%;
            overflow-x: hidden;
            width: 300px;
            display: flex;
            justify-content: center;
            align-items: center;
            flex-direction: column;
            display: flex;
            margin-left: -200px;
            margin-top: -16px;
            margin-bottom: -90px;
        }

        .profile {
            margin-bottom: 20px;
            margin-top: -12px;
        }

            .profile img {
                box-shadow: 0px 0px 5px 1px grey;
                margin-top: 40px;
            }

        .name {
            font-size: 22px;
            font-weight: bold;
            padding-top: 20px;
        }

        .job {
            font-size: 13px;
            font-weight: bold;
            padding-top: 2px;
            color: #818181;
        }

        .loc {
            font-size: 15px;
            font-weight: bold;
            padding-top: 15px;
        }

        .url, hr {
            text-align: center;
        }

            .url hr {
                width: 100%;
            }

            .url a {
                color: #818181;
                display: block;
                font-size: 20px;
                margin: 10px 0;
                padding: 6px 8px;
                text-decoration: none;
                text-transform: uppercase;
            }

                .url a:hover, .url .active {
                    color: #454444;
                }

        /* End */

        /* Main */

        .main {
            padding-left: 150px;
            width: 100%;
        }

            .main h2 {
                color: #333;
                font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
                font-size: 32px;
                margin-bottom: 10px;
            }

            .main .card {
                background-color: #efefef;
                border-radius: 18px;
                box-shadow: 1px 1px 8px 0 grey;
                height: auto;
                margin-bottom: 30px;
                padding: 50px 0 50px 50px;
                width: 100%;
            }

                .main .card table {
                    border: none;
                    font-size: 16px;
                    height: 270px;
                    width: 80%;
                }

        .edit {
            position: absolute;
            color: #fff;
            right: 14%;
        }

        .container-section {
            display: flex;
        }

        .top {
            margin-top: 40px;
            display: flex;
            justify-content: space-between;
            align-items: center;
            font-family: 'Open Sans', sans-serif;
        }

            .top a {
                background-color: black;
                color: white;
                padding: 8px 8px;
                border-radius: 10px;
            }

        .produto-display {
            border: 2px solid black;
            padding: 5px;
            border-radius: 10px;
            display: flex;
            margin-bottom: 20px;
        }

        .produto-texto {
            margin: 0 20px;
            width: 500px;
        }

        .produto-titulo {
            font-size: 16px;
            font-weight: bold;
        }

        .produto-localizacao {
            font-size: 13px;
        }

        .produto-descricao {
            color: #62676B;
            font-size: 15px;
            width: 85%;
        }

        .produto-info-preco {
            display: flex;
            flex-direction: column;
            text-align: center;
            padding-left: 20px;
            padding-right: 20px;
            width: 40%;
        }

        .teste {
            display: flex;
        }

        .link-leilao {
            transition: color 0.3s ease;
        }


            .link-leilao:hover {
                text-decoration: underline;
                color: #281A1A;
            }

        .data {
            display: flex;
            flex-direction: column;
            text-align: center;
            align-items: center;
        }

        .margin-my {
            margin-left: 70px;
            margin-top: 15px;
            margin-bottom: 10px;
        }

        .form-control-my {
            display: block;
            width: 100%;
            padding: 0.2rem 0.5rem;
            font-size: 1rem;
            font-weight: 400;
            line-height: 1.5;
            color: #212529;
            background-color: #fff;
            background-clip: padding-box;
            border: 1px solid #ced4da;
            -webkit-appearance: none;
            -moz-appearance: none;
            appearance: none;
            border-radius: 0.25rem;
            transition: border-color 0.15s ease-in-out, box-shadow 0.15s ease-in-out;
        }


    </style>
</head>


<body>
    <section class="container-section">

                @if(Model.UserEnum == Online_Auctions_LI4.enums.UserEnum.Licitador)
                {
                    <div class="sidenav">
                        <div class="profile" style="text-align: center;align-items: center;">
                            <img src="~/istockphoto-1223671392-612x612.jpg" alt="" width="150" height="150">

                            <div class="name">
                                @Model.Name
                            </div>
                            <div class="job">
                                @Model.Username
                            </div>
                            <div class="loc">
                                @Model.morada
                            </div>
                        </div>

                        <div class="sidenav-url">
                            <div class="url" style="margin-top: 90px;">
                                <hr align="center">
                                <a asp-controller="Profile" asp-action="Editar" asp-route-id="@Model.Id">Editar Perfil</a>
                                <hr align="center">
                            </div>
                            <div class="url">
                                <a href="#settings">Log Out</a>
                                <hr align="center">
                            </div>
                        </div>
                    </div>
                }
                else
                {
                    <div class="sidenav">
                        <div class="profile" style="text-align: center;align-items: center;">
                            <img src="~/istockphoto-1223671392-612x612.jpg" alt="" width="150" height="150">

                            <div class="name">
                                @Model.Name
                            </div>
                            <div class="job">
                                @Model.Username
                            </div>
                            <div class="loc">
                                @Model.morada
                            </div>
                        </div>

                        <div class="sidenav-url">
                            <div class="url" style="margin-top: 90px;">
                                <hr align="center">
                                <a asp-controller="Profile" asp-action="Editar" asp-route-id="@Model.Id">Editar Perfil</a>
                                <hr align="center">
                            </div>
                            <div class="url">
                                <a href="#settings">Produtos</a>
                                <hr align="center">
                            </div>
                            <div class="url">
                                <a href="#settings">Log Out</a>
                                <hr align="center">
                            </div>
                        </div>
                    </div>
                }

        <!-- End -->
        <!-- Main -->
        <div class="main w-100" >
            <h2 style="margin-bottom: 50px; text-align:center; align-items:center;">Editar Perfil</h2>
            <div class="d-flex align-items-center h-custom-2 px-5 ms-xl-4 w-100" style="">

                <form asp-controller="Profile" asp-action="Editar" method="post" class="w-100" style="width: 30rem">

                    <div class="form-outline mb-2">
                        <label class="form-label fw-bold" for="login">Nome</label>
                        <input type="text" asp-for="Name" id="login" style="border: 2px solid black" class="form-control-my form-control-lg" placeholder="Insira o seu Nome" />

                    </div>

                    <div class="form-outline mb-2">
                        <label class="form-label fw-bold" for="login">Username</label>
                        <input type="text" asp-for="Username" id="login" style="border: 2px solid black" class="form-control-my form-control-lg" placeholder="Insira o seu Username" />

                    </div>

                    <div class="form-outline mb-2">
                        <label class="form-label fw-bold" for="login">Email</label>
                        <input type="email" asp-for="Email" id="login" style="border: 2px solid black" class="form-control-my form-control-lg" placeholder="Insira o seu Email" />

                    </div>

                    <div class="form-outline mb-2">
                        <label class="form-label fw-bold" for="login">Password</label>
                        <input type="password" asp-for="Password" id="login" style="border: 2px solid black" class="form-control-my form-control-lg" placeholder="Insira a sua Password (em branco para manter)" />

                    </div>

                    <div class="form-outline mb-2">
                        <label class="form-label fw-bold" for="login">NIF</label>
                        <input type="number" asp-for="NIF" id="login" style="border: 2px solid black" class="form-control-my form-control-lg" placeholder="Insira o seu NIF" />

                    </div>

                    <div class="form-outline mb-2">
                        <label class="form-label fw-bold" for="login">Morada</label>
                        <input type="text" asp-for="morada" id="login" style="border: 2px solid black" class="form-control-my form-control-lg" placeholder="Insira a sua Morada" />
                    </div>

                    <div class="pt-1" style="margin-bottom:20px;margin-top:20px;">
                        <button class="btn btn-dark btn-block w-100" type="submit">EDITAR CONTA</button>
                    </div>

                   
                </form>

            </div>
        </div>
</body>

@functions {
    public string CalcularTempoRestante(DateTime dataFinal)
    {
        var agora = DateTime.Now;
        var tempoRestante = dataFinal - agora;

        if (tempoRestante > TimeSpan.Zero)
        {
            // Formatação do tempo restante
            return $"{tempoRestante.Hours:D2}:{tempoRestante.Minutes:D2}:{tempoRestante.Seconds:D2}";
        }
        else
        {
            return "Tempo Encerrado";
        }
    }

    public String AjustarSemiDescricao(String descricao)
    {
        if (descricao.Length > 180)
        {
            return descricao.Substring(0, 180) + "...";
        }
        else
        {
            return descricao;
        }
    }
}